{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015",
      "es2015.promise",
      "es2016.array.include",
      "es2018",
      "es2020",
      "es2022"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@openmrs/*": ["./node_modules/@openmrs/*"],
      "__mocks__": ["./__mocks__"],
      "tools": ["./tools"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "esnext",
    "types": ["react", "react-dom", "fhir"]
  },
  "include": ["src/**/*"]
}
